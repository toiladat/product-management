extends ../../layouts/default.pug

block main
  if(role.permission.includes("products-category_view"))
    h1(class="mb-4") #{pageTitle}
    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
          if(role.permission.includes("products-category_add"))
            .col-4.text-right
              a(
                href=`/${prefixAdmin}/products-category/create`
                class="btn btn-outline-success"
              ) +Thêm mới
      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Trạng thái
            th Hành động

        tbody
          each item, index in records
            tr
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td
                if(role.permission.includes("products-category_edit"))
                  if (item.status === "active")
                    button(
                      link=`/${prefixAdmin}/products-category/changeStatus/inactive/${item._id}`
                      class="badge badge-success"
                      data-status="active"
                      data-id=item.id
                      button-change-status
                    ) Hoạt động
                  else
                    button(
                      link=`/${prefixAdmin}/products-category/changeStatus/active/${item._id}`
                      class="badge badge-danger"
                      data-status="inactive"
                      data-id=item.id
                      button-change-status
                    ) Dừng hoạt động
              td
                a(
                  class="btn btn-secondary btn-sm"
                  href=`/${prefixAdmin}/products-category/detail/${item.id}`
                ) Chi tiết
                if(role.permission.includes("products-category_edit"))
                  a(
                    class="btn btn-warning btn-sm ml-1"
                    href=`/${prefixAdmin}/products-category/edit/${item.id}`
                  ) Sửa
                if(role.permission.includes("products-category_delete"))
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete=item.id
                    target='products-category'
                  ) Xóa
