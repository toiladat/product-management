extends ../../layouts/default.pug

block main
  .container.my-3
    .row
      .col-8.mx-auto
        h2 Đổi mật khẩu
        form(
          action="/user/password/forgot"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
    
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Gửi mã OTP
